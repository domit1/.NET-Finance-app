@{
    ViewData["Title"] = "Create / Edit";
}
@model Project_dotnet.Models.Expense


    <div class="text-center">
        <h1 class="display-4">Create or edit an expense</h1>
    </div>

<div class="table-box">

    <form asp-action="CreateEditExpenseForm" asp-controller="Home" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" value="@Model?.Id ?? 0" />

        <label class="mt-4">Value</label>
        <input class="form-control" type="number" placeholder="0" asp-for="Value" step="0.01" />

        <label class="mt-4">Description </label>
        <input class="form-control" type="text" placeholder="Add a description" asp-for="Description" />

        <label class="mt-4">Date </label>
        <input class="form-control" type="date" placeholder="Add a date" asp-for="Date" />

        <button class="btn btn-primary mt-4" type="submit">OK</button>
    </form>
</div>
